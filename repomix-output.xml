        .post('/api/auth/callback/credentials')
        .send({
          username: user.email,
          password: 'password123',
          csrfToken: 'test-csrf-token'
        })

      expect(response.status).toBe(200)
    })

    it('should fail login with invalid credentials', async () => {
      const user = await createTestUser(prisma)
      
