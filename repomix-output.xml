      };
      
      render(
        <ErrorBoundary>
          <TypedError />
        </ErrorBoundary>
      );
      
      expect(screen.getByText('Type error occurred')).toBeInTheDocument();
    });

    it('handles errors thrown in event handlers with error boundary', () => {
      const ComponentWithHandler = () => {
        const [error, setError] = React.useState(false);
        
