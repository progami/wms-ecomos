  const [emailContent, setEmailContent] = useState<any>(null)
  const [loading, setLoading] = useState(false)
  const [copied, setCopied] = useState(false)

  useEffect(() => {
    generateEmail()
  }, [])

  const generateEmail = async () => {
    setLoading(true)
    try {
