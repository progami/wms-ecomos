      const oldPallets = transaction.transactionType === 'RECEIVE' ? transaction.storagePalletsIn : transaction.shippingPalletsOut
      const quantityChanged = oldCartons !== formData.cartons || oldPallets !== formData.pallets
      
      // Update transaction
