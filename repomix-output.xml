      const response = await request(app)
        .post('/api/auth/callback/credentials')
        .send({
          csrfToken: 'test-csrf-token'
        })

      expect(response.status).toBe(400)
    })

    it('should handle inactive users', async () => {
      const user = await createTestUser(prisma)
