          metrics.successfulCalls++
          metrics.totalDuration += Date.now() - startTime
          return result
        } catch (error) {
          metrics.failedCalls++
          metrics.errors.push(error)
          metrics.totalDuration += Date.now() - startTime
          throw error
        }
      })

      // Make multiple calls
      for (let i = 0; i < 10; i++) {
        try {
          await mockAPIWithMetrics()
        } catch (error) {
          // Expected some failures
        }
      }

      expect(metrics.totalCalls).toBe(10)
