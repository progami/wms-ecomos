        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(shipmentData)
      })
      
      if (response.ok) {
        const data = await response.json()
        setEmailContent(data.email)
      } else {
        toast.error('Failed to generate email')
