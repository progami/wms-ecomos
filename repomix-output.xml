        router.push('/config/warehouse-configs')
      }
    } catch (error) {
      toast.error('Failed to load configuration')
      router.push('/admin/settings/warehouse-configs')
    } finally {
      setLoading(false)
    }
  }

  const handleSubmit = async (e: React.FormEvent) => {
