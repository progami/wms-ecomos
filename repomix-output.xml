    }

    const config = getImportConfig(entityName)
    if (!config) {
      return NextResponse.json({ error: 'Invalid entity' }, { status: 400 })
    }

    // Create workbook
    const wb = XLSX.utils.book_new()

    // Create headers from field mappings
