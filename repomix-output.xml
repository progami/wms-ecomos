        .post('/api/auth/callback/credentials')
        .send({
          username: user.email,
          password: 'wrongpassword',
          csrfToken: 'test-csrf-token'
        })

      expect(response.status).toBe(401)
    })

    it('should handle rate limiting after multiple failed attempts', async () => {
